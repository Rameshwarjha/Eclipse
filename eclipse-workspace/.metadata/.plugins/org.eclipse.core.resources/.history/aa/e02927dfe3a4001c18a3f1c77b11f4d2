	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		try {
			FileInputStream fi =new FileInputStream("E://new//createFileUsingCode.txt");
			int i = fi.read();
			
			while (i!=-1) {
				System.out.print((char)i);
				
			}
			fi.close();
		}
		catch(Exception e ) {
			e.printStackTrace();
		}
		
	}

}
